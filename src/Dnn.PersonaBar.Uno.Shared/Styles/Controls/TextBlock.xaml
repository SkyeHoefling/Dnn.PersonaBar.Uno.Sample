<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBlock" x:Key="StandardTextBlock">
        <Setter Property="FontFamily" Value="roboto,arial" />
        <Setter Property="TextWrapping" Value="WrapWholeWords" />
    </Style>
    <Style TargetType="TextBlock" x:Key="Title" BasedOn="{StaticResource StandardTextBlock}">
        <Setter Property="FontWeight" Value="500" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="Margin" Value="28, 30" />
    </Style>
    <Style TargetType="TextBlock" x:Key="TabHeading" BasedOn="{StaticResource StandardTextBlock}">
        <Setter Property="FontWeight" Value="600" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style TargetType="TextBlock" x:Key="Label" BasedOn="{StaticResource StandardTextBlock}">
        <Setter Property="FontWeight" Value="600" />
        <Setter Property="FontSize" Value="14" />
    </Style>

</ResourceDictionary>
