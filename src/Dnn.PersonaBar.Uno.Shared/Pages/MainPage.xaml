<Page
    x:Class="Dnn.PersonaBar.Uno.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock Text="Dnn Persona Bar Module Sample" FontSize="30" HorizontalAlignment="Center" />
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="IsAdmin:" FontWeight="Bold" />
            <TextBlock Text="{Binding IsAdmin}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="IsHost:" FontWeight="Bold" />
            <TextBlock Text="{Binding IsHost}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="User ID:" FontWeight="Bold" />
            <TextBlock Text="{Binding UserId}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Portal ID:" FontWeight="Bold" />
            <TextBlock Text="{Binding PortalId}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Request Verification Token:" FontWeight="Bold" />
            <TextBlock Text="{Binding RequestVerificationToken}" />
        </StackPanel>
    </StackPanel>
</Page>
